<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="mega" translate="label" sortOrder="10">
            <label>Mega</label>
        </tab>
        <section id="mfields" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Fields</label>
            <tab>mega</tab>
            <resource>Wagento_Mega::mfields_config</resource>
            <group id="mgeneral" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>General Configuration</label>
                    <field id="category" translate="label" type="select"
                           sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Product Category</label>
                        <source_model>Wagento\Mega\Model\Config\Source\Category</source_model>
                    </field>
                    <field id="m2" translate="label" type="text"
                           sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                        <label>Auth Token</label>
                    </field>
                    <field id="mphone" translate="label" type="text"
                           sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                        <label>Mega Phone</label>
                    </field>
            </group>
        </section>
    </system>
</config>