<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="Configure Mega">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Columns</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">100</item>
            </item>
        </argument>
        <field name="columns_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Wagento\Mega\Model\Config\Source\Options</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">1</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Columns Number</item>
                </item>
            </argument>
        </field>

        <field name="image_yes">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Wagento\Mega\Model\Config\Source\YesNoOptions</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">1</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Image in Category Childs?
                    </item>
                </item>
            </argument>
        </field>

        <field name="show_logo">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">\Wagento\Mega\Model\Config\Source\YesNoLogo</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">1</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Do you want to place an image?
                    </item>
                </item>
            </argument>
        </field>

        <field name="show_description">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">\Wagento\Mega\Model\Config\Source\YesNoDescription</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">1</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Do you want to place a description?
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>